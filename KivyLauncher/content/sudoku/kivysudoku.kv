#:kivy 2.1.0

<Sudoku>:
    canvas.before:
        Color:
            rgba: [0.1, 0.1, 0.1, 1]
        Rectangle:
            pos: self.pos
            size: self.size    

<BigGrid>:
    cols: 3
    size_hint: (None, 0.9)  
    width: self.height  
    spacing: 4  
    padding: 8  
    canvas.before:
        Color:
            rgba: [0, 0.25, 0.3, 1]
        Rectangle:
            pos: self.pos
            size: self.size    

<SmallGrid>:
    cols: 3
    spacing: 1
    canvas.before:
        Color:
            rgba: [0, 0.25, 0.3, 1]  
        Rectangle:
            pos: self.pos
            size: self.size    

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
    Button:
        font_size: dp(30)
        font_name: "label_font.ttf"
        text: "easy"
        pos_hint: { "center_x": .5, "center_y": 0.75}
        size_hint: 0.2, 0.1
        on_press: root.parent.easy_button()
        background_normal: ""
        background_color: 0.2, 0.2, 0.2, 1
    Button:
        font_size: dp(30)
        font_name: "label_font.ttf"
        text: "medium"
        pos_hint: { "center_x": .5, "center_y": 0.5}
        size_hint: 0.2, 0.1
        on_press: root.parent.medium_button()
        background_normal: ""
        background_color: 0.2, 0.2, 0.2, 1
    Button:
        font_size: dp(30)
        font_name: "label_font.ttf"
        text: "hard"
        pos_hint: { "center_x": .5, "center_y": 0.15}
        size_hint: 0.2, 0.1
        on_press: root.parent.hard_button()
        background_normal: ""
        background_color: 0.2, 0.2, 0.2, 1